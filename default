# Define the load balancing pool with sticky sessions
upstream backend_app_servers {
    ip_hash;  
    server 10.0.10.101 max_fails=3 fail_timeout=360s;
    server 10.0.10.107 max_fails=3 fail_timeout=360s;
    server 10.0.10.108 max_fails=3 fail_timeout=360s;
}



server {
        server_name wolfserve.wolf.uk.com;



    location / {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # CRITICAL: Forward cookies for session persistence
        proxy_set_header Cookie $http_cookie;
        proxy_pass_header Set-Cookie;

        # Changed to point to the upstream pool
        proxy_pass http://backend_app_servers;
    }




    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/wolfserve.wolf.uk.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/wolfserve.wolf.uk.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

server {
        server_name wolf.uk.com;
        server_name www.wolf.uk.com;
    location / {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Cookie $http_cookie;
        proxy_pass_header Set-Cookie;

        # Changed to point to the upstream pool
        proxy_pass http://backend_app_servers;
    }




    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/wolf.uk.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/wolf.uk.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

