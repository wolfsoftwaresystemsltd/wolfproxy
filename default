    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/property.intelligentwolf.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/property.intelligentwolf.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

# Server block for app.intelligentwolf.com (SSL/443)
server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name app.intelligentwolf.com;

    # Load the certificate for intelligentwolf.com
    ssl_certificate /etc/letsencrypt/live/app.intelligentwolf.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/app.intelligentwolf.com/privkey.pem;

    # Standard Certbot settings
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location / {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # CRITICAL: Forward cookies for session persistence
        proxy_set_header Cookie $http_cookie;
        proxy_pass_header Set-Cookie;
        
        # Changed to point to the upstream pool
        proxy_pass http://backend_app_servers;
    }
}

# --- HTTP to HTTPS Redirects (No changes needed) ---

# Redirect HTTP to HTTPS for app.wolf.uk.com
server {
    listen 80;
    listen [::]:80;
    server_name app.wolf.uk.com;
    return 301 https://$host$request_uri;
}

# Redirect HTTP to HTTPS for app.intelligentwolf.com
server {
    listen 80;
    listen [::]:80;
    server_name app.intelligentwolf.com;
    return 301 https://$host$request_uri;
}



server {
    if ($host = property.intelligentwolf.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name property.intelligentwolf.com;
    return 404; # managed by Certbot


}


server {
    if ($host = webrtc.intelligentwolf.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name webrtc.intelligentwolf.com;
    return 404; # managed by Certbot


}



